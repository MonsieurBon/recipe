{
  "name": "recipes",
  "version": "1.2.1-SNAPSHOT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:ci": "ng test --no-watch --no-progress",
    "format": "prettier --write src/**/*.{ts,html}",
    "format:check": "prettier --check src/**/*.{ts,html}",
    "lint": "ng lint --fix",
    "lint:check": "ng lint"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@11.6.2",
  "dependencies": {
    "@angular/cdk": "~21.1.3",
    "@angular/common": "^21.1.2",
    "@angular/compiler": "^21.1.2",
    "@angular/core": "^21.1.2",
    "@angular/forms": "^21.1.2",
    "@angular/material": "~21.1.3",
    "@angular/platform-browser": "^21.1.2",
    "@angular/router": "^21.1.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.1.2",
    "@angular/cli": "^21.1.2",
    "@angular/compiler-cli": "^21.1.2",
    "@angular/material": "^21.1.3",
    "@semantic-release-plus/docker": "^3.1.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^13.1.3",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "angular-eslint": "21.2.0",
    "eslint": "^9.39.1",
    "jsdom": "^28.0.0",
    "prettier": "^3.8.1",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.54.0",
    "vitest": "^4.0.18"
  },
  "release": {
    "branches": [
      "main",
      "work"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "prepareCmd": "mvn -B versions:set -DnewVersion=\"${nextRelease.version}\" -DgenerateBackupPoms=false",
          "publishCmd": "npm run build && mvn -B clean package -DskipTests=true && docker build --tag monsieurbon/recipe:build .",
          "successCmd": "NEXT_VERSION=$(npm version $(npm version patch --no-git-tag-version)-SNAPSHOT --no-git-tag-version) && mvn -B versions:set -DnewVersion=$NEXT_VERSION -DgenerateBackupPoms=false && git commit -am \"chore(release): $NEXT_VERSION [skip ci]\" && git push"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "package-lock.json",
            "CHANGELOG.md",
            "pom.xml"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "target/recipe*.jar",
              "label": "JAR"
            }
          ]
        }
      ],
      [
        "@semantic-release-plus/docker",
        {
          "name": "monsieurbon/recipe:build",
          "registry": "ghcr.io",
          "skipLogin": true
        }
      ]
    ]
  }
}
